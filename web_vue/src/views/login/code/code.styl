.login-box {
	width: 100%;
	min-height: 100vh;
	background-image: url(../../../assets/images/login_bg.png);
	background-size: 100% 100%;
}
.content-box {
	padding: 75px 20px 0 20px;
}
.content {
	height: 520px;
    background:rgba(0,0,0,0.6);
	border-radius:10px;
}
.cancel {
	padding: 20px 20px 0 0;
	opacity: 0.6;
	display: flex;
	justify-content: flex-end;
	align-items: center;
	color #ffffff
}
.cancel div {
	width: 80px;
	height: 26px;
	border:1px solid rgba(255,255,255,1);
	border-radius: 26px;
	font-size: 14px;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #FFFFFF;
}
.iconjiantou-zuo {
	font-size: 16px;
}
.logo {
	text-align: center;
}
.login-img {
	height: 120px;
	object-fit: cover;
}
.code-input {
	margin-top: 52px;
	text-align: center;
	margin-left: 30px;
	margin-right: 30px;
	height: 40px;
	line-height: 40px;
	border-radius: 20px;
	overflow: hidden;
	border:1px solid rgba(255,255,255,0.6);
}
.code-input input {
	width: 100%;
	height: 100%;
	color: #FFFFFF;
	font-size: 16px;
	text-align center
}
input::placeholder{
	color:#ffffff !important;
	opacity 0.6
}
.get-code {
	margin: 30px 30px 0;
	overflow: hidden;
	border-radius: 20px !important;
}
.get-code-btn {
	width: 100%;
	height: 40px;
	border-radius: 20px !important;
	background: #999999 !important;
	color: #FFFFFF !important;
	font-size: 16px;
}
.division {
	display: flex;
	align-items: center;
	justify-content: center;
	margin: 50px 12px 0 16px;
}
.active {
	background: #DF5959 !important;
}
.agreement {
	margin-top: 21px;
	width 100%;
	display flex
	align-items center
	justify-content center
}
.agreement view {
	display: flex;
	align-items:baseline;
	justify-content: center;
}
.xy {
	margin-left: 10px;
	font-size: 14px;
	color: #999999;
}
.xy a{
	color: #DF5959;
}
.active {
	background-color: #1BBA7E;
	color: #FFFFFF;
}
.mask {
	width 100%
	height 100%
	display flex
	align-items center
	justify-content center
	flex-direction column
	overflow hidden
	background:rgba(0,0,0,0.2);
}
.protocol
	width 90%
	height 80%
	background #ffffff
	display flex
	border-radius 5px
	overflow-y: scroll
.text
	padding 15px
