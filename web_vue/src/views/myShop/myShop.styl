.shop-list
  height 100%
  width 100%
  background #F7F7F7
.top-box
  margin 10px 5px
  height 128px
  background-size 100% 100%
.cy-shop
  background-image url("../../assets/images/cy_bg.png")
.xx-shop
  background-image url("../../assets/images/xx_bg.png")
.qj-shop
  background-image url("../../assets/images/qj_bg.png")
.lc-shop
  background-image url("../../assets/images/lc.png")
.shop-name
  padding-top 14px
  padding-left 12px
  font-size 16px
  color #ffffff
.shop-name span
  margin-left 6px
  font-size 12px
  opacity 0.6
.divide-into
  margin-top 15px
  margin-left 12px
  height 24px
  width 130px
  background:rgba(255,255,255,0.1);
  border-radius 14px
  display flex
  align-items center
  justify-content center
  color #ffffff
  font-size 12px
.enjoy
  margin-top 30px
  margin-left 12px
  font-size 12px
  color:rgba(255,255,255,.6);
.enjoy span
  opacity 1 !important
  color #ffffff
.bottom-box
  background #ffffff
.item-box
  margin 0 15px
.box
  height 80px
  display flex
  flex-direction column
  justify-content center
  border-bottom 1px solid #E5E5E5
.box:last-child
  border none
.item-title
  font-size 12px
  color #999999
.item-condition
  margin-top 14px
  display flex
  align-items center
  justify-content space-between
.condition-title
  font-size 12px
.accomplish
  font-size 12px
.reach
  color #E89222