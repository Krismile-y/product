.change-box
  width 100%
  height:100%
  background #F7F7F7
.old-phone, .newPhone
  display flex
  flex-direction column
  align-items center
  justify-content center
.top-box
  width 100%
  height 100%
  background #ffffff
  padding-top 40px
.old, .new
  margin 0 45px
  border 1px solid #E5E5E5
  height 40px
  border-radius 20px
  display flex
  align-items center
  justify-content center
  color #999999
  font-size 16px
  overflow hidden
.get-code
  display flex
  align-items center
  margin 30px 45px
  border-radius 20px
  border 1px solid #DC0000
  height 40px
  overflow hidden
.hr
  width 1px
  height 20px
  background #000000
.code-input
  height 100%
.code-input input
  height 100%
  text-align center
  font-size 16px
.get-code-btn
  width 100px
  height 100%
  font-size 12px
  color #DC0000
.verify
  margin 30px 0
  height 40px
  display flex
  flex-direction column
  width 100%
.btn
  margin 0 45px
  background #DF5959
  height 100%
  display flex
  align-items center
  justify-content center
  color #ffffff
  font-size 16px
  border-radius 20px
.new input
  width 100%
  height 100%
  text-align center
  color #000
.new
  border 1px solid #DC0000
.new-get-code
  border 1px solid #E5E5E5 !important







