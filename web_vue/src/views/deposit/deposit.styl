.tabs-list
  border-top 1px solid #E5E5E5
.flex-column
  height 100%
  width 100%
  background #F7F7F7
  display flex
  flex-direction column
.goods-item
  margin-top 10px
  background #ffffff
.top-title
  padding 0 15px
  height 40px
  border-bottom 1px solid #E5E5E5
  display flex
  align-items center
  justify-content space-between
.count-down
  height 20px
  padding 0 12px
  border 1px solid #DC0000
  display flex
  align-items center
  justify-content center
  border-radius 2px
  font-size 12px
  color #DC0000

.status
  color #666666
  font-size: 12px
.goods-box
  height 100%
  display flex
  flex-direction column
  padding 15px 15px 20px

.info
  display flex
.goods-img
  width 60px
  height 60px
  flex-shrink 0
.goods-img img
  height 100%
  width 100%

.right-box
  flex 1
  margin-left 10px
  display flex
  flex-direction column
  justify-content space-between
  font-size 12px
  overflow hidden
.goods-name
  font-weight bold
  width 100%
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  height 17px
  line-height 17px
.price
  margin-top 17px
  font-size 12px
  color #E89222
  display flex
  align-items center
  justify-content space-between

.price span
  font-size 16px
  font-weight bold
.work-off
  display flex
  align-items center
  height 50px
  border-bottom 1px solid #E5E5E5
  padding 0 15px
.user-img
  width 36px
  height 36px
  border-radius 50%
  flex-shrink 0
.user-box
  margin-left 10px
  flex 1
  display flex
  align-items center
  justify-content space-between

.bottom-box
  display flex
  align-items center
  justify-content space-between
.user-name
  font-size 12px
  font-weight bold
  height 17px
.phone
  opacity 0.6
  font-size 12px
  margin-left 15px
.buyer
  color #DC0000
  font-size 12px


