.address-page
  height 100%
  display flex
  flex-direction column
.address-list
  margin-top 10px
  padding-bottom 50px
  //padding 10px 0px 70px
.address-item
  //display flex
  align-items center
  //border-radius 10px
  background-color #fff
  margin-bottom 10px
  overflow hidden
  position relative
  .not-text
    padding 0 10px 0 15px
  .address-right
    flex 1
  .item__container
    //padding 0px 10px 0
  .item__header
    display flex
    align-items center
    font-size 16px
    height 48px
    margin-bottom 10px
    border-bottom 1px solid #E5E5E5
    padding 0 10px
    justify-content space-between
  .item__header__left
    display flex
    align-items center
  .header__name
    ellipsis()
    width 50px
    font-weight 700
    margin-right 14px
  .item__content
    width 150px
    ellipsis()
    font-size 12px
    line-height 1.4
    color rgba(0, 0, 0, 1)
  .item__footer
    flex-box-row(center)
    padding 10px 10px 20px 10px
    //margin-bottom 10px
    .footer__default
      flex 1
    .tag
      font-size 14px
      color #666666
      padding 2PX 6PX
      border-radius 3PX
      line-height:20px;
      //background-color rgba(30, 83, 87, 0.2)
    .default
      color #D53833
      font-size 14px
    .iconfont
      color rgba(0, 0, 0, 0.6)
      font-size 18px
      padding 0 18px
.add-btn
  display flex
  align-items center
  justify-content center
  height 50px
  color #3AD4BE
  background-color #fff
  flex-shrink 0
  padding 0 15px

.btn
  width 100%
  height 40px
  background #DF5959
  display flex
  align-items center
  justify-content center
  border-radius 5px
  color #ffffff
  font-size 16px








