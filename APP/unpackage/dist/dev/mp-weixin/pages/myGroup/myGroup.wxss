.box {
  width: 90%;
  margin: 30rpx auto;
}
.box .daiding {
  width: 100%;
  height: 90rpx;
  border: 1rpx solid #cccccc;
  margin-top: 10rpx;
}
.box .show {
  border: 1rpx solid #cccccc;
  width: 100%;
  height: 180rpx;
  font-size: 36rpx;
}
.box .show .title {
  margin-top: 10rpx;
}
.box .three {
  width: 100%;
  margin-top: 10rpx;
  height: 40rpx;
  display: flex;
}
.box .three .threeItem {
  height: 100%;
  flex: 1;
  color: #999;
}
.box .inputs {
  width: 100%;
  height: 60rpx;
  position: relative;
  border: 1rpx solid #cccccc;
}
.box .inputs input {
  width: 80%;
  height: 100%;
  margin: 0 auto;
}
.box .inputs .pos {
  width: 100rpx;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
}
.box .inputs .pos image {
  width: 20rpx;
  height: 20rpx;
}
.box .picker-view {
  width: 100%;
  height: 60rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  padding: 0 0 0 20rpx;
  border: 1rpx solid #cccccc;
  line-height: 60rpx;
  color: #0c0c0c;
}
.tits {
  width: 90%;
  height: 55rpx;
  display: flex;
  color: #000;
  margin: 30rpx auto;
  border-radius: 10rpx;
  margin-top: 20rpx;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 600;
}
.tits .title {
  width: 50%;
  height: 100%;
}
.color {
  color: red;
}
.box {
  width: 90%;
  margin: auto;
}
.box .team-card {
  width: 100%;
  height: 260rpx;
  box-sizing: border-box;
  padding: 16rpx;
  background-image: url('https://img2.baidu.com/it/u=2153006192,2110258112&fm=253&fmt=auto&app=138&f=JPEG?w=800&h=500');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  margin: 20rpx 0;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.box .team-card .image-box {
  width: 100%;
  height: 140rpx;
  display: flex;
}
.box .team-card .image-box .img {
  width: 140rpx;
  height: 140rpx;
  padding: 0;
  margin: 0;
  background-image: url('https://tanzhonghefazhan.liuguofei.cn/static/avatar.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.box .team-card .image-box .message {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  box-sizing: border-box;
  padding: 0 0 0 10rpx;
}
.box .team-card .image-box .message .people-name {
  color: #fff;
  font-size: 20px;
}
.box .team-card .image-box .message .people-phone {
  color: #fff;
}
.box .team-card .level-box {
  flex: 1;
  line-height: 88rpx;
  font-size: 20px;
  color: #fff;
}
.box .team-card .screen-btn {
  position: absolute;
  bottom: 26rpx;
  right: 18rpx;
  box-sizing: border-box;
  width: 120rpx;
  height: 60rpx;
  color: #fff;
  background-color: red;
  border-radius: 5px;
}

