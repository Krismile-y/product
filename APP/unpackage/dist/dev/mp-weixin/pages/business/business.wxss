.top {
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  padding-left: 50rpx;
  color: green;
  position: relative;
}
.top .da {
  font-size: 50rpx;
}
.top .right {
  width: 200rpx;
  height: 100%;
  position: absolute;
  right: 40rpx;
  top: 0;
}
.top .right .yuan {
  width: 70rpx;
  height: 70rpx;
  border: 1rpx solid #ccc;
  border-radius: 50%;
  color: green;
  font-weight: 600;
}
.info {
  width: 100%;
  padding-bottom: 30rpx;
  background-color: #efefef;
}
.info .box {
  width: 98%;
  margin: 0 auto;
}
.info .box .title {
  width: 100%;
  height: 70rpx;
  display: flex;
}
.info .box .title .titleItem {
  flex: 1;
  height: 100%;
  color: green;
  font-weight: 600;
  font-size: 34rpx;
}
.info .itemBox {
  width: 98%;
  margin: 0 auto;
  border: 1rpx solid #ccc;
}
.info .itemBox .list {
  width: 100%;
  height: 70rpx;
  border-bottom: 1rpx solid #cccccc;
  display: flex;
}
.info .itemBox .list .item {
  border-right: 1rpx solid #cccccc;
  flex: 1;
  height: 100%;
  color: green;
}
.four {
  font-size: 34rpx;
  width: 98%;
  height: 70rpx;
  margin: 0 auto;
  display: flex;
}
.four .two {
  width: 50%;
  height: 100%;
  display: flex;
}
.four .two .twoItem {
  width: 120rpx;
  height: 100%;
  position: relative;
}
.four .two .twoItem .pos {
  position: absolute;
  width: 70rpx;
  height: 2rpx;
  background-color: red;
  top: 70rpx;
  left: 25rpx;
}
.four .twos {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: right;
}
.four .twos .twoItems {
  width: 140rpx;
  height: 100%;
}
.threeMsg {
  width: 95%;
  height: 90rpx;
  margin: 30rpx auto;
  border: 1rpx solid #ccc;
  color: #ccc;
  display: flex;
}
.threeMsg .threeItem {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
}
.threeMsg .threeItem input {
  width: 100%;
  height: 100%;
}
.message {
  width: 95%;
  height: 50rpx;
  margin: 10rpx auto;
  display: flex;
}
.message .left {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}
.message .right {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: right;
}
.message .hong {
  width: 200rpx;
  height: 40rpx;
  color: #fff;
  background-color: red;
  margin-right: 20rpx;
  border-radius: 5rpx;
  font-size: 28rpx;
}
.btn {
  width: 95%;
  height: 90rpx;
  margin: 10rpx auto;
  background-color: lightpink;
  color: #fff;
  border-radius: 10rpx;
  font-weight: 600;
}
.wenxin {
  width: 95%;
  height: 40rpx;
  margin: 10rpx auto;
  color: red;
  font-size: 28rpx;
}
.warp {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.rect {
  width: 460rpx;
  background-color: #fff;
  position: relative;
  padding-bottom: 50rpx;
}
.shang {
  width: 100%;
  height: 50rpx;
  border-bottom: 1rpx solid #cccccc;
}
.xia {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50rpx;
  border-top: 1rpx solid #cccccc;
}
.msg {
  text-indent: 40rpx;
}

