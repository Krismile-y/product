.inputBox {
  width: 90%;
  margin: 60rpx auto;
}
.inputBox .yanzheng {
  width: 100%;
  display: flex;
  height: 90rpx;
  margin-top: 30rpx;
}
.inputBox .yanzheng .left {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}
.inputBox .yanzheng .left input {
  width: 100%;
  height: 100%;
}
.inputBox .yanzheng .right {
  width: 50%;
  height: 100%;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
}
.inputBox .inputs {
  width: 100%;
  height: 130rpx;
  border: 1rpx solid #cccccc;
  border-radius: 20rpx;
  margin-top: 30rpx;
}
.inputBox .inputs .title {
  width: 100%;
  font-size: 28rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 30rpx;
}
.inputBox .inputs input {
  width: 90%;
  height: 80rpx;
  margin-left: 30rpx;
}
.inputBox .xuanxiang {
  width: 100%;
  height: 60rpx;
  display: flex;
  font-size: 28rpx;
}
.inputBox .xuanxiang .left {
  width: 50%;
  height: 100%;
}
.inputBox .xuanxiang .right {
  width: 50%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: right;
}
.inputBox .ins {
  width: 100%;
  height: 130rpx;
  margin-top: 30rpx;
  background-image: url(/static/common/btn.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  color: #fff;
  font-size: 40rpx;
  border-radius: 20rpx;
  background-color: red;
}
.down {
  width: 200rpx;
  height: 80rpx;
  border-radius: 20rpx;
  color: #fff;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: red;
}
.logon {
  width: 100%;
  padding-bottom: 60rpx;
}

