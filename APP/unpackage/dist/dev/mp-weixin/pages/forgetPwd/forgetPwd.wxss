.safe {
  width: 100%;
  height: 100vh;
}
.safe .item {
  width: 95%;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
  margin: 0 auto;
  position: relative;
}
.safe .item .left {
  width: 40%;
  height: 100%;
  display: flex;
  align-items: center;
}
.safe .item .right {
  width: 60%;
  height: 100%;
  color: #999;
}
.safe .item .right input {
  width: 100%;
  height: 100%;
  padding-left: 20rpx;
}
.safe .item .yanzheng {
  width: 30%;
  height: 100%;
  background-color: rebeccapurple;
  position: absolute;
  right: 0;
  top: 0;
}
.safe .item .yanzheng image {
  width: 100%;
  height: 100%;
}
.in {
  width: 95%;
  height: 130rpx;
  margin-top: 30rpx;
  background-image: url(/static/common/btn.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  color: #fff;
  font-size: 40rpx;
  border-radius: 20rpx;
}

