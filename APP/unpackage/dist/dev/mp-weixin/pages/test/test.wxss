
.container {
  padding: 20px;
}
.title {
  font-size: 24px;
  text-align: center;
  margin-bottom: 20px;
}
.input-box {
  display: flex;
  margin-bottom: 20px;
}
.input-title {
  flex: 1;
  font-size: 18px;
  line-height: 32px;
}
.input {
  flex: 2;
  padding: 0 10px;
  height: 32px;
  border: 1px solid #ddd;
  border-radius: 4px;
}
.radio-group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.radio {
  width: 120px;
}
.btn {
  display: block;
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #007aff;
  color: #fff;
  border-radius: 4px;
}

