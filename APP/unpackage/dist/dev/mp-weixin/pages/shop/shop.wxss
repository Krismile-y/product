.item {
  width: 85%;
  height: 45rpx;
  display: flex;
  font-weight: 600;
  font-size: 36rpx;
}
.item .left {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}
.item .right {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  padding-right: 30rpx;
  justify-content: right;
}
.box {
  width: 98%;
  margin: 30rpx auto;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.box .shop {
  width: 48.5%;
  margin-top: 20rpx;
}
.box .shop image {
  border-radius: 25rpx;
  width: 100%;
  height: 300rpx;
}
.box .shop .title {
  font-weight: 600;
}
.box .shop .detail {
  font-size: 30rpx;
}
.shopDetail {
  background-color: #f3f3f3;
  width: 100%;
  height: 100vh;
}
.shopDetail image {
  width: 100%;
  height: 500rpx;
}
.shopDetail .biaoti {
  width: 100%;
  height: 70rpx;
  display: flex;
  box-sizing: border-box;
  align-items: center;
  padding-left: 20rpx;
  margin-top: 20rpx;
}
.shopDetail .biaoti .left {
  width: 140rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  color: #fff;
  background-color: red;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.shopDetail .biaoti text {
  font-weight: 600;
}
.shopDetail .tishi {
  color: red;
  font-size: 28rpx;
  padding-left: 20rpx;
}
.shopDetail .buy {
  width: 520rpx;
  height: 70rpx;
  margin: 30rpx auto;
  background-color: #e6e6e6;
  font-weight: 600;
}
.shopDetail .de {
  width: 100%;
  margin-top: 20rpx;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.shopDetail .btn {
  width: 520rpx;
  height: 70rpx;
  margin: 30rpx auto;
  background-image: linear-gradient(to right, rgba(85, 255, 0, 0), #aaff7f);
  background-color: #54d27e;
  font-weight: 600;
  color: #fff;
}
.popup {
  width: 100%;
  height: 1130rpx;
}
.top {
  width: 100%;
  height: 400rpx;
  background-color: #4bc93e;
  background-image: linear-gradient(to right, rgba(85, 255, 0, 0), #aaff7f);
  border-bottom-left-radius: 5.4em 5.4em;
}
.top .shang {
  width: 90%;
  margin: 0rpx auto;
  height: 200rpx;
  padding-top: 10rpx;
  display: flex;
  padding-top: 30rpx;
}
.top .shang .left {
  width: 30%;
  height: 100%;
}
.top .shang .left image {
  width: 70%;
  height: 70%;
  border-radius: 20rpx;
}
.top .shang .center {
  width: 60%;
  height: 100%;
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
}
.top .shang .center .one {
  margin-top: 20px;
  margin-bottom: 10px;
  padding-left: 10rpx;
}
.top .shang .center .two {
  padding-left: 10rpx;
}
.top .shang .right {
  width: 40%;
  height: 100%;
  display: flex;
  justify-content: right;
  align-items: center;
}
.top .shang .right image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}
.top .xia {
  width: 90%;
  margin: 0rpx auto;
  height: 206rpx;
  border-radius: 20rpx;
}
.top .xia .boxs {
  width: 100%;
  height: 100%;
  font-size: 38rpx;
  display: flex;
}
.top .xia .boxs .address {
  width: 50%;
  display: flex;
  height: 100%;
  position: relative;
}
.top .xia .boxs .address image {
  width: 100rpx;
  height: 100rpx;
}
.shiming {
  width: 120rpx;
  height: 70rpx;
  background-color: #fff;
  border-radius: 24rpx;
}
.av {
  width: 100%;
  height: 120rpx;
  display: flex;
  box-sizing: border-box;
}
.av .left {
  width: 70%;
  height: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding-left: 30rpx;
}
.av .right {
  width: 30%;
  height: 100%;
}
.av .right image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 10rpx;
}
.newTop {
  width: 100%;
  height: 400rpx;
  background-image: url(/static/common/heisebg.jpg);
  background-size: 100% auto;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  padding-left: 30rpx;
  font-size: 36rpx;
}
.newTop view {
  margin-top: 10rpx;
}
.toAddress {
  width: 100%;
  height: 120rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
}
.toAddress .item {
  width: 50%;
  height: 100%;
}
.toAddress .item image {
  width: 80rpx;
  height: 80rpx;
}

