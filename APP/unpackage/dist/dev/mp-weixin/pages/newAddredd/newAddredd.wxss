.item {
  width: 95%;
  height: 140rpx;
  margin: 0 auto;
  display: flex;
}
.item .left {
  width: 30%;
  height: 100%;
  font-size: 34rpx;
  font-weight: 560;
}
.item .right {
  width: 70%;
  height: 100%;
  position: relative;
}
.item .right .pos {
  width: 100rpx;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
}
.item .right input {
  width: 100%;
  height: 60%;
  background-color: #f0f0f0;
  border-radius: 20rpx;
}

