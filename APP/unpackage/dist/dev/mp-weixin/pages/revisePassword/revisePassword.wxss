.item {
  width: 100%;
  display: flex;
  height: 90rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.item .shimingLeft {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  padding-left: 25rpx;
}
.item .shimingRight {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: right;
  color: #999;
  padding-left: 25rpx;
}
.item .left {
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  padding-left: 25rpx;
}
.item .right {
  width: 70%;
  height: 100%;
}
.item .right input {
  width: 100%;
  height: 100%;
}
.btn {
  width: 90%;
  height: 90rpx;
  background-color: red;
  color: #fff;
  margin: 30rpx auto;
  border-radius: 10rpx;
}

