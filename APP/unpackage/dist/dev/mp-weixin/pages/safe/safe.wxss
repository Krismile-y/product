.safe {
  width: 100%;
  height: 100vh;
  background-color: #f1f1f1;
}
.safe .item {
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.safe .item .right {
  position: absolute;
  top: 0;
  right: 30rpx;
  width: 150rpx;
  height: 100%;
  color: #999;
}
.safe .item image {
  width: 40rpx;
  height: 40rpx;
  padding-left: 30rpx;
  margin-right: 15rpx;
}

