.box {
  width: 90%;
  margin: 30rpx auto;
}
.box .daiding {
  width: 100%;
  height: 90rpx;
  border: 1rpx solid #cccccc;
  margin-top: 10rpx;
}
.box .show {
  border: 1rpx solid #cccccc;
  width: 100%;
  height: 180rpx;
  font-size: 36rpx;
}
.box .show .title {
  margin-top: 10rpx;
}
.box .three {
  width: 100%;
  margin-top: 10rpx;
  height: 40rpx;
  display: flex;
}
.box .three .threeItem {
  height: 100%;
  flex: 1;
  color: #999;
}
.box .inputs {
  width: 100%;
  height: 60rpx;
  position: relative;
  border: 1rpx solid #cccccc;
}
.box .inputs input {
  width: 80%;
  height: 100%;
  margin: 0 auto;
}
.box .inputs .pos {
  width: 100rpx;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
}
.box .inputs .pos image {
  width: 20rpx;
  height: 20rpx;
}
.box .picker-view {
  width: 100%;
  height: 60rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  padding: 0 0 0 20rpx;
  border: 1rpx solid #cccccc;
  line-height: 60rpx;
  color: #0c0c0c;
}

