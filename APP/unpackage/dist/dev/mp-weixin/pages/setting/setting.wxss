.main {
  width: 100%;
  height: 100%;
}
image {
  width: 40rpx;
  height: 40rpx;
  z-index: 99;
  margin: 20rpx;
}
.box {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  outline: none;
}
.menu {
  color: white;
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.8);
}

.box {
  width: 95%;
  margin: 30rpx auto;
  background-color: #fff;
}
.box .title {
  width: 100%;
  height: 40rpx;
  display: flex;
  border-bottom: 1rpx solid #ccc;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  padding-bottom: 5rpx;
  padding-top: 5rpx;
}
.box .title .shu {
  width: 8rpx;
  height: 85%;
  margin-right: 10rpx;
  background-color: #498cdb;
}
.box .msg {
  width: 100%;
  padding-bottom: 20rpx;
  padding-top: 10rpx;
  display: flex;
  justify-content: start;
  flex-wrap: wrap;
}
.box .msg .item {
  height: 160rpx;
  width: 150rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.box .msg .item image {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 10rpx;
}
.in {
  width: 90%;
  height: 130rpx;
  margin-top: 30rpx;
  background-image: url(/static/common/btn.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  color: #fff;
  font-size: 40rpx;
  border-radius: 20rpx;
  margin: 0 auto;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
}

