.investDetail {
  padding-bottom: 30rpx;
}
.investDetail .top image {
  width: 100%;
  height: 420rpx;
}
.investDetail .three {
  margin: 30rpx auto;
  margin-bottom: 60rpx;
  width: 85%;
  height: 90rpx;
  display: flex;
}
.investDetail .three .item {
  flex: 1;
  height: 100%;
  color: #ccc;
}
.investDetail .three .item .de text {
  color: red;
}
.investDetail .li {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-weight: 520;
  border-bottom: 1rpx solid #dfdfdf;
  color: #9c9c9c;
}
.investDetail .two {
  width: 100%;
  height: 400rpx;
  margin-top: 30rpx;
}
.investDetail .btn {
  margin: 30rpx auto;
  color: #fff;
  background-image: linear-gradient(to right, rgba(85, 255, 0, 0), #aaff7f);
  background-color: #54d27e;
  width: 90%;
  height: 90rpx;
}

