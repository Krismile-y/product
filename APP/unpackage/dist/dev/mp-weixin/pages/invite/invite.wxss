.invite {
  width: 100%;
  height: 100vh;
}
.invite .id {
  width: 50%;
  font-size: 36rpx;
}
.invite image {
  width: 50%;
  height: 360rpx;
  margin-top: 30rpx;
}
.invite .btn {
  color: #fff;
  width: 80%;
  height: 90rpx;
  margin-top: 30rpx;
  background-color: #4bc93e;
  background-image: linear-gradient(to right, rgba(85, 255, 0, 0), #aaff7f);
  border-radius: 30rpx;
}

