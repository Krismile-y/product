.box {
  font-size: 30rpx;
  width: 98%;
  margin: 0rpx auto;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.box .shop {
  height: 500rpx;
  width: 48.5%;
}
.box .shop image {
  border-radius: 25rpx;
  width: 100%;
  height: 300rpx;
}
.box .shop .title {
  font-weight: 600;
}
.box .shop .detail {
  font-size: 30rpx;
}
.box .shop .font {
  display: flex;
  width: 100%;
  height: 50rpx;
}
.box .shop .font .info {
  width: 50%;
  height: 100%;
}

