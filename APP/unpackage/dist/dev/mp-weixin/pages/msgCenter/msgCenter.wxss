.zhanneixin .item {
  width: 100%;
  height: 300rpx;
  display: flex;
  border-bottom: 1rpx solid #cccccc;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.zhanneixin .item .left {
  width: 30%;
  height: 100%;
}
.zhanneixin .item .left image {
  width: 180rpx;
  height: 180rpx;
}
.zhanneixin .item .right {
  width: 70%;
  height: 100%;
  font-weight: 550;
}
.zhanneixin .item .right .title {
  text-align: center;
  color: red;
  font-weight: 600;
}
.zhanneixin .item .right .detail {
  margin-top: 10rpx;
  font-weight: 540;
}
.pingtaigonggao .item {
  width: 100%;
  height: 600rpx;
  display: flex;
  border-bottom: 1rpx solid #cccccc;
}
.pingtaigonggao .item .left {
  width: 30%;
  height: 100%;
}
.pingtaigonggao .item .left image {
  width: 100%;
  height: 600rpx;
}
.pingtaigonggao .item .right {
  width: 70%;
  height: 100%;
  font-weight: 550;
  box-sizing: border-box;
  padding-left: 10rpx;
}
.pingtaigonggao .item .right .title {
  text-align: center;
  color: red;
  font-weight: 600;
  font-size: 36rpx;
}
.pingtaigonggao .item .right .detail {
  margin-top: 10rpx;
  font-weight: 540;
}
.xitongtongzhi {
  margin: 0 auto;
  margin-top: 30rpx;
  width: 90%;
  height: 200rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ebebeb;
  background-color: #f7f7f7;
}
.xitongtongzhi .title {
  color: red;
  font-weight: 600;
  font-size: 36rpx;
}
.xitongtongzhi .detail {
  margin-top: 20rpx;
  width: 100%;
}
.zuixinhuodong .title {
  color: red;
  font-weight: 600;
  font-size: 36rpx;
  margin-top: 60rpx;
}
.zuixinhuodong .detail {
  width: 100%;
  margin-top: 30rpx;
  font-size: 28rpx;
  width: 90%;
  text-indent: 50rpx;
}
.zuixinhuodong image {
  width: 90%;
}

